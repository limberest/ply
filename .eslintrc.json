{
  "plugins": ["node"],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": "error",
    "no-console": "off"
  },
  "env": {
    "browser": false
  },
  "globals": {
    "require": false,
    "module": false,
    "localStorage": false,
    "fetch": false,
    "Request": true
  }
}